---
import { Section, H2, H3, P, Image, Icon, Button } from "ui";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!-- Types -->
<Section name="types">
  <H2>{title}</H2>

  <div class="types__list">
    {
      Array.from({ length: 8 }).map((_, index) => (
        <div class="types__item">
          <div class="types__item-img">
            <Image src="services/1.png" />
          </div>
          <H3>Плёнка </H3>
          <P>Описание типа плёнки</P>
        </div>
      ))
    }
  </div>
</Section>

<style lang="scss" is:global>
  @use "scss/helpers" as *;

  .types {
    position: relative;

    &__list {
      width: 100%;
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: rem(40);

      @include media("xl") {
        gap: rem(35) rem(25);
      }
      @include media("lg") {
        grid-template-columns: repeat(2, 1fr);
      }
      @include media("sm") {
        gap: rem(20) rem(10);
      }
    }

    &__item {
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap: rem(10);

      @include media("xs") {
        gap: rem(5);

        .text-p {
          font-size: rem(14);
        }
      }

      &-img {
        width: 100%;
        height: rem(280);
        border-radius: rem(20);

        @include media("3xl") {
          height: rem(220);
        }
        @include media("xl") {
          height: rem(200);
        }
        @include media("lg") {
          height: rem(250);
        }
        @include media("md") {
          height: rem(200);
        }
        @include media("xs") {
          width: 100%;
          min-height: rem(120);
          height: auto;
          max-height: rem(200);
          border-radius: rem(15);
        }

        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
          border-radius: inherit;
        }
      }

      .text-h3 {
        margin-top: rem(10);

        @include media("xs") {
          margin-top: rem(5);
        }
      }
    }
  }
</style>
